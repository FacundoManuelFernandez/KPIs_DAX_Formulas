Cantidad de Ventas con AcumulaciÃ³n de Descuento Club de Beneficios + Otro Descuento = 
CALCULATE(
    DISTINCTCOUNT('TablaDescuentos'[ID Transaccion]),
    'TablaDescuentos'[Estado de descuento] = "Aplicado",
    FILTER(
        VALUES('TablaDescuentos'[ID Transaccion]),
        VAR IDActual = 'TablaDescuentos'[ID Transaccion]
        VAR DtoClubBeneficios = 
            CALCULATE(
                COUNTROWS('TablaDescuentos'),
                'TablaDescuentos'[ID Transaccion] = IDActual,
                'TablaDescuentos'[Nombre Descuento] = "Club de Beneficios",
                'TablaDescuentos'[Estado de descuento] = "Aplicado"
            ) > 0
        VAR OtroDescuento = 
            CALCULATE(
                COUNTROWS('TablaDescuentos'),
                'TablaDescuentos'[ID Transaccion] = IDActual,
                'TablaDescuentos'[Nombre Descuento] <> "Club de Beneficios",
                'TablaDescuentos'[Estado de descuento] = "Aplicado"
            ) > 0
        RETURN DtoClubBeneficios && OtroDescuento
    )
)
